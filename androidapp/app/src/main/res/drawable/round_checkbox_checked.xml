<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <stroke
                android:width="2dp"
                android:color="#888" />
            <solid android:color="@color/cyan" />
            <size
                android:width="20dp"
                android:height="20dp" />
        </shape>
    </item>
    <item
        android:width="6dp"
        android:height="2dp"
        android:left="4dp"
        android:top="11dp">
        <rotate android:fromDegrees="45">
            <shape android:shape="rectangle">
                <solid android:color="@color/white" />
            </shape>
        </rotate>
    </item>
    <item
        android:width="10dp"
        android:height="2dp"
        android:left="7dp"
        android:top="10dp">
        <rotate android:fromDegrees="-45">
            <shape android:shape="rectangle">
                <solid android:color="@color/white" />
            </shape>
        </rotate>
    </item>
</layer-list>
